//- src/assets/_layout/default.pugを継承
extends /assets/_layout/default

//- meta設定
block vars
  //- 上書き
  - title ="Marching Cubes Metaball"
  - useTitleSeparater = false;
  - keywords = '';
  - description = 'WebGL Marching Cubes Metaball powered by three.js';

  //- その他変数
  - bodyClass = 'is-index';  //- bodyタグに付与するクラス
  - contentsId = 'index'

//- ページ個別のCSS
block css
  link(rel="stylesheet", href="./assets/css/index.css")

//- ページ個別のJS(head)
block scriptHead

//- ページ個別のJS
block script
  script(src="./assets/js/index.js")

//- ここからコンテンツ部分を記述
block contents
  main.index_p-main.js-mainVisual
    canvas(ref="canvas")
